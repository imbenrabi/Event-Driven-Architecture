{
  "name": "events-driven-architecture",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "description": "event driven architecture monorepo",
  "workspaces": ["packages/*"],
  "scripts": {
    "clean-install": "rm -rf node_modules package-lock.json",
    "commitlint": "commitlint --edit",
    "build-server-types": "bun run --cwd packages/server build-ts",
    "dev:server": "bun run --cwd packages/server dev",
    "dev:client": "bun run --cwd packages/client dev",
    "dev:kafka": "bun run --cwd packages/kafka dev",
    "lint": "eslint 'packages/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'packages/**/*.{ts,tsx}' --fix --max-warnings=0",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test:server": "bun run --cwd packages/server test",
    "test:providers": "bun run --cwd packages/providers test",
    "test:kafka": "bun run --cwd packages/kafka test",
    "test:all": "bun run test:server && bun run test:providers && bun run test:kafka",
    "test:coverage:open:server": "bun run --cwd packages/server test:coverage:open",
    "test:coverage:open:providers": "bun run --cwd packages/providers test:coverage:open",
    "test:coverage:open:kafka": "bun run --cwd packages/kafka test:coverage:open",
    "test:coverage:open:all": "bun run test:coverage:open:server && npm run test:coverage:open:providers && npm run test:coverage:open:kafka"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5",
    "@events-driven-architecture/kafka": "workspace:*",
    "@events-driven-architecture/providers": "workspace:*",
    "@events-driven-architecture/server": "workspace:*",
    "@events-driven-architecture/client": "workspace:*"
  },
  "lint-staged": {
    "packages/**/*.ts": "eslint --fix --max-warnings=1"
  },
  "config": {
    "pre-git": {
      "enabled": true,
      "pre-commit": [
        "npm run lint-staged"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  },
  "author": "imbenrabi@gmail.com"
}
